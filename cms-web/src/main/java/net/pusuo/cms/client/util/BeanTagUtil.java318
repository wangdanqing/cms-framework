	public String processPageWraper(String content, News news, int mpage)
			throws UnsupportedEncodingException {
//		if (content.length() < hit + 100)
//			return content;
		String result = content;
		// æˆªå­—
		switch (news.getAttr()) {
		case 4:
			result = processNewsAttr(result, news);
			break;
		case 5:
			result = processNewsAttr(result, news);
			break;
		case 6:
			result = processNewsAttrPic(result, news);
			break;
		default:
			break;
		}
		// æ‚å¿—æ–‡ç« 
		boolean flag = false;
		if (news.getSubtype() == News.SUBTYPE_MAGAZINE && news.getMagazineId() > 0)
		{
			Magazine mz = (Magazine)ItemManager.getInstance().get(new Integer(news.getMagazineId()), Magazine.class);
			
			if(mz!=null && mz.getShowPicInPic() == 1)
			{
				result = processMagazinePicInPic(result, news);
				flag = true;
			}
		}
		
		// åˆ†é¡µæ–‡ç«  åˆé¡µé˜…è¯»
		if (mpage > -1)
			result = processSinglePage(result, news, mpage);
		
		//ç”Ÿæˆxml,æ‚å¿—çš„ç”»ä¸­ç”»é™¤å¤–
		if((news.getAttr()>3 && news.getAttr() < 7 && !flag)||(!flag && mpage > -1 && mpage==0))
			generateFullContentXML(news, null);
	
		log.info("result length:" + result.length());	
		return result;
	}

