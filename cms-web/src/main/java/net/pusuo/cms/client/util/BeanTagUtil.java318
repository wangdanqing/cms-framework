	private String processMagazinePicInPic(String content, News news) {
		StringBuffer copycontent = new StringBuffer(content.toLowerCase());
		int pos = -1;
		try {
			pos = getNomalPositionByCharNum(copycontent.toString(), 150);//150
			log.info("pip nomal position :" + pos);
		} catch (RuntimeException e) {
			pos = -1;
			log.error("getNomalPositionByCharNum ERROR: " + e.getMessage());
		}
		//é‡æ–°è·å–ä½ç½®
		if(pos == -1)// || pos > hit + 101)
		{
			try {
			pos  = getTokenPosition(copycontent.toString(), 150);//150
			log.info("pip token position:  " + pos);
			} catch (RuntimeException e) {
				pos = -1;
				log.error("getTokenPosition ERROR: " + e.getMessage());
			}
		}
		//after login
		int flag = 0; 
		if (news.getMagazineId() > 0)
		{
			Magazine mg = (Magazine) ItemManager.getInstance().get(new Integer(news.getMagazineId()), Magazine.class);
			flag = mg.getShowPicInPic();
			if(flag == 1)
				generateFullContentXML(news, getMagazineSheet((Item) mg, true));
		}
		if (pos >= 50) {
			//before login
			log.info("pic in pic pos: " + pos + "||content.length: " + content.length());
			if(news.getMagazineSheetId() > 0 && flag == 1)
			{
				MagazineSheet ms = (MagazineSheet) ItemManager.getInstance().get(new Integer(news.getMagazineSheetId()),MagazineSheet.class);
				content = content.substring(0, pos + 4) + getMagazineSheet((Item) ms, false) + content.substring(pos);
			}
		}
		return content;
	}

